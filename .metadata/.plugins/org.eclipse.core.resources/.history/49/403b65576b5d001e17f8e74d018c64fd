package main.java.com.dev.marcos.client.controller;

import main.java.com.dev.marcos.client.dto.ProductDTO;
import main.java.com.dev.marcos.client.feignclients.ProductFeignClient;

@RestController
@RequestMapping
public class HomeController {
    
    @Autowired
    private ProductFeignClient feignClient;

    @GetMapping
    public ProductDTO findProduct() {
        return feignClient.findProduct().getBody();
    }

}
